!!! 5
%html{:lang => "en"}
  %head
    %title= "#{@title}" || 'Derek Eder - Open Data Web Developer'
    %meta{:charset => "utf-8"}

    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
            
    / Styles
    = include_stylesheet "bootstrap.cerulean.min"
    = include_stylesheet :custom
    = include_stylesheet "bootstrap-responsive"
    = include_stylesheet "code_highlighting"
    = content :stylesheets
    
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      = include_javascript "http://html5shim.googlecode.com/svn/trunk/html5.js"

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          .container.nav-collapse
            %ul.nav
              %li
                %a{:href => '#home'} Home
              %li
                %a{:href => '#projects'} Projects
              %li
                %a{:href => '#what-we-do'} What we do
              %li
                %a{:href => '#our-open-source-tools'} Tools
              %li
                %a{:href => '#who-we-are'} Who we are
              %li
                %a{:href => '#clients'} Clients
              %li
                %a{:href => '#contact-us'} Contact

    .container
      .row
        .span10.offset1
          = yield
      
    %footer.footer
      .span12
        %p.pull-right
          %a{:href => "mailto:info@datamade.us"} Email us
          |
          &copy; DataMade, LLC
    
    = include_javascript :jquery
    = include_javascript :bootstrap
    = content :javascripts

    :javascript
      $(function(){
        $(".nav a").click(function() {
          var elementClicked = $(this).attr("href");
          var destination = $(elementClicked).offset().top;
          $("html:not(:animated),body:not(:animated)").animate({ scrollTop: destination-75}, 500 );
          $(".nav li").removeClass("active");
          $(this).parent().addClass("active");
        });
      });

    = include_javascript :"analytics_lib" if production?

